<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uagrm.promoya">
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!--WATSON-->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <!--ENDWATSON-->


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name="android.support.multidex.MultiDexApplication"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MyStore"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".StoreDetail"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Home"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Login"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ProductList"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".ProductDetail"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Chat.HomeChat.ChatHomeActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".Chat.ChatDetail.ThreadActivity"
            android:screenOrientation="portrait"></activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCmF2RUojptkJiu_VuJhACg9_QwMpF4Cus" />

        <!--LIBRERIA IMGCROPpER-->
        <activity android:name="uagrm.CropResultActivity">
        </activity>
        <activity android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat"/>
        <activity
            android:name=".Watson.Conversation.ChatBotActivity"
            android:screenOrientation="portrait">
        </activity>
        <!--Firebase-->
        <service android:name=".Firebase.MyFirebaseIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <service android:name=".Firebase.MyFirebaseMessaging">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_notification_icon" />
        <meta-data android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/primary" />

        <!--EndFirebase-->
    </application>

</manifest>