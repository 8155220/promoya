<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtName"
            android:hint="Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:inputType="text"
            app:met_baseColor="@color/colorPrimary"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@color/colorPrimary"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtDescription"
            android:hint="Descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:inputType="textMultiLine"
            app:met_baseColor="@color/colorPrimary"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@color/colorPrimary"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtPrice"
            android:hint="Precio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:inputType="number"
            app:met_baseColor="@color/colorPrimary"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@color/colorPrimary"
            app:met_singleLineEllipsis="true"
            />
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtDiscount"
            android:hint="Descuento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/colorPrimary"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:inputType="number"
            app:met_baseColor="@color/colorPrimary"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@color/colorPrimary"
            app:met_singleLineEllipsis="true"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="10">
            <LinearLayout
                android:id="@+id/layout_img"
                android:layout_weight="9"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:weightSum="4">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_above="@+id/horizontal_recycler_view"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="16dp"
                    android:padding="5dp"
                    android:src="@drawable/addimg" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_above="@+id/horizontal_recycler_view"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="16dp"
                    android:padding="5dp"
                    android:src="@drawable/addimg" />

                <ImageView
                    android:id="@+id/img3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_above="@+id/horizontal_recycler_view"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="16dp"
                    android:padding="5dp"
                    android:src="@drawable/addimg" />

                <ImageView
                    android:id="@+id/img4"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_above="@+id/horizontal_recycler_view"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="16dp"
                    android:padding="5dp"
                    android:src="@drawable/addimg" />


            </LinearLayout>
            <ImageView
                android:id="@+id/img_remove_last"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/field_body"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_remove_circle_black_24dp" />
        </LinearLayout>

        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <info.hoang8f.widget.FButton
                android:id="@+id/btnUpload"
                android:text="Subir Imagenes"
                android:textColor="@android:color/white"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_alignParentBottom="true"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/primary_dark"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>